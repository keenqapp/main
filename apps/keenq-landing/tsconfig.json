{
  "extends": "astro/tsconfigs/strict",
  "include": ["src", "**/*.astro", "./src/**/*.astro"],
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      },
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
//      "@components/*": ["src/components/*"],
//      "@layouts/*": ["src/layouts/*"],
//      "@pages/*": ["src/pages/*"]
    }
  }
}
