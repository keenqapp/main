---
import 'normalize.css'
import 'system-font-css'


const { gap } = Astro.props

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Dating app for special as you">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/keenq.svg" />
		<link
			rel='preload'
			href='https://keenq.fra1.cdn.digitaloceanspaces.com/assets/fonts/keenq-Bold.woff'
			as='font'
			type='font/woff'
		/>
		<link
			rel='preload'
			href='https://keenq.fra1.cdn.digitaloceanspaces.com/assets/fonts/keenq-Bold.woff2'
			as='font'
			type='font/woff2'
		/>
		<title>Your keenq</title>
	</head>
	<body>
		<main class='main'>
			<slot />
		</main>
	</body>
</html>

<style is:global define:vars={{ gap }}>
	@font-face {
    font-family: 'keenq';
    src: url('https://keenq.fra1.cdn.digitaloceanspaces.com/assets/fonts/keenq-Bold.woff2') format('woff2'),
    url('https://keenq.fra1.cdn.digitaloceanspaces.com/assets/fonts/keenq-Bold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }
  :root {
    --appbar-height: 56px;
    --vertical-space: 40px;
		--primary: #36B37E;
    --secondary: #CE93D8;
		--cool1: #22c1c3;
		--cool2: #fdbb2d;
  }
  html {
    box-sizing: border-box;
    max-width: 100vw;
    min-height: 100vh;
  }
  body {
    font-family: system-ui, sans-serif;
    color: #28344D;
    background-color: #f3f3f3;
    min-height: 100vh;
  }
  a {
    text-decoration: none;
  }
  .grecaptcha-badge {
    visibility: hidden;
  }
  * {
    box-sizing: border-box;
  }
	h1,h2,h3,h4,h5,h6 {
		font-family: keenq, serif;
    margin: 0;
	}
	p {
    margin: 0;
	}
  .main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
		gap: calc(var(--gap) * 1rem);
		overflow: hidden;
  }
</style>
